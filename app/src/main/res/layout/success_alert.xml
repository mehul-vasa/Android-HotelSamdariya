<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/successAlert_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_success"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/successAlert_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="SUCCESS!!"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:id="@+id/successAlert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="booking request sent successfully"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        />

    <Button
        android:id="@+id/successAlert_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/background"
        android:text="Go Back"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        />

</LinearLayout>

