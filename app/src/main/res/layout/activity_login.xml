<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/background"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:tint="@color/white"
            android:src="@drawable/logo"/>

        <EditText
            android:id="@+id/login_loginIdTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_style"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="E-mail Id / Mobile Number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/fontPrimary"
            />

        <EditText
            android:id="@+id/login_passwordTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_style"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="Password"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/fontPrimary"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/login_forgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:padding="10dp"
            android:textSize="@dimen/secondaryFont"
            android:textStyle="bold"
            android:textColor="@color/fontWhite"
            android:gravity="center|right"
            />

        <Button
            android:id="@+id/login_loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_border"
            android:text="Login"
            android:textStyle="bold"
            android:textColor="@color/fontWhite"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/login_signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User? Sign UP"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/secondaryFont"
                android:textStyle="bold"
                android:textColor="@color/fontWhite"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/login_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login As A Guest"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="20sp"
                android:textSize="@dimen/secondaryFont"
                android:textStyle="bold"
                android:textColor="@color/fontWhite"
                android:gravity="center|end"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>